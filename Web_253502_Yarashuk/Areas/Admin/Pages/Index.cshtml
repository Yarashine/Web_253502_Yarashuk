@page
@model Web_253502_Yarashuk.UI.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    int prev = Model.Products.CurrentPage == 1 ? 1 : Model.Products.CurrentPage - 1;
    int next = Model.Products.CurrentPage == Model.Products.TotalPages ? Model.Products.TotalPages : Model.Products.CurrentPage + 1;
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.Items[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.Items[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.Items[0].ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="@item.ImagePath" class="card-img-top" style="object-fit: contain; height: 150px;" alt="@item.Name">
                </td>
                <td>
                    <a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Edit</a>
                    <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i> Details</a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i> Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>

<nav aria-label="navigation">
    <ul class="pagination">
        <li class="page-item @(Model.Products.CurrentPage == 1 || Model.Products.CurrentPage == 0 ? "disabled" : "")">
            <a class="page-link" href="?pageNo=@prev">Previous</a>
        </li>
        @for (int i = 1; i <= Model.Products.TotalPages; i++)
        {
            <li class="page-item @(Model.Products.CurrentPage == i ? "active" : "")">
                <a class="page-link" href="?pageNo=@i">@i</a>
            </li>
        }
        <li class="page-item @(Model.Products.CurrentPage == Model.Products.TotalPages ? "disabled" : "")">
            <a class="page-link" href="?pageNo=@next">Next</a>
        </li>
    </ul>
</nav>